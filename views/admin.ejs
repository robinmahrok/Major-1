<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<style>
* {box-sizing: border-box}

/* Set height of body and the document to 100% */
body, html {
  height: 100%;
  margin: 0;
  font-family: Arial;
}

/* Style tab links */
.tablink {
  background-color: black;
  color: white;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  font-size: 20px;
  width: 33.3%;
}

.tablink:hover {
  background-color: #777;
}

/* Style the tab content (and add height:100% for full page content) */
.tabcontent {
  color: black;
  display: none;
  padding: 100px 20px;
  height: 100%;
}



#CApproved {background-color: #FAFAD2;}
#CPending {background-color: #FAFAD2;}
#All {background-color: #FFFFE0;}
</style>
</head>
<body>

<button class="tablink" onclick="openPage('CApproved', this, 'red')">CURRENT APPROVED</button>
<button class="tablink" onclick="openPage('CPending', this, 'green')" id="defaultOpen">CURRENT PENDING</button>
<button class="tablink" onclick="openPage('All', this, 'blue')">ALL ORDERS</button>

<div id="CApproved" class="tabcontent">
  <div class="container">
 
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>SAP ID</th>
        <th>ORDER ID</th>
        <th>ITEMS</th>
        <th>AMOUNT</th>
        <th>DELIVERY STATUS</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% for(var i=0; i < email.length; i++) { if(status[i]=="Approved") {%> 
        <tr>
          <td><%=email[i]%></td>
          <td><%=orderid[i]%></td>
          <td><%=food[i]%></td>
          <td><%=amount[i]%></td>
          <td>
            <% if(take[i]=="Pending") {%> 
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary" name="btn1" style="margin-right: 10px;" onclick="OrderTaken('<%=orderid[i]%>')">TAKEN</button>
            <button type="button" class="btn btn-danger" name="btn2" onclick="OrderNotTaken('<%=orderid[i]%>')">NOT TAKEN</button>
            </div>
            <%}
            else{
            %>
            <%=take[i]%>
            <%}%>
          </td>
          </tr>	
        <%}}%>
    
    </tbody>
  </table>
</div>
</div>

<div id="CPending" class="tabcontent">
   <div class="container">

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>SAP ID</th>
        <th>ORDER ID</th>
        <th>ITEMS</th>
        <th>AMOUNT</th>
		    <th>STATUS</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% for(var i=0; i < email.length; i++) { if(status[i]=="Pending"){%> 
        <tr>
          <td><%=email[i]%></td>
          <td><%=orderid[i]%></td>
          <td><%=food[i]%></td>
          <td><%=amount[i]%></td>
          <td>
              <div class="btn-group" role="group" aria-label="Basic example">
              <button type="button" class="btn btn-primary" name="btn1" style="margin-right: 10px;" onclick="approveOrder('<%=orderid[i]%>')">APPROVE</button>
              <button type="button" class="btn btn-danger" name="btn2" onclick="declineOrder('<%=orderid[i]%>')">DISCARD</button>
              </div>
          </td>
        </tr>	
        <%}}%>
    </tbody>
  </table>
</div>
</div>

<div id="All" class="tabcontent">
   <div class="container">
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>SAP ID</th>
        <th>ORDER ID</th>
        <th>ITEMS</th>
        <th>AMOUNT</th>
    <th>ORDER STATUS</th>
    <th>DELIVERY STATUS</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% for(var i=0; i < email.length; i++) { %> 
        <tr>
          <td><%=email[i]%></td>
          <td><%=orderid[i]%></td>
          <td><%=food[i]%></td>
          <td><%=amount[i]%></td>
          <td><%=status[i]%></td>
          <td><%=take[i]%></td>
        </tr>	
        <%}%>
    </tbody>
  </table>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js" integrity="sha512-DZqqY3PiOvTP9HkjIWgjO6ouCbq+dxqWoJZ/Q+zPYNHmlnI2dQnbJ5bxAHpAMw+LXRm4D72EIRXzvcHQtE8/VQ==" crossorigin="anonymous"></script>
<script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
  </script>
  
<script>
function approveOrder(orderid){
  // import axios from 'axios';
  axios.get('http://localhost:3005/AcceptOrder/'+orderid)
  .then((res)=>{
    console.log(res.data.message);
    if(confirm('Order Accepted Successfully!')){
    window.location.reload();  
}
  })
  .catch((err)=>{
    console.log(err);
  })
  console.log(orderid);
}

function OrderTaken(orderid){
  // import axios from 'axios';
  axios.get('http://localhost:3005/OrderTaken/'+orderid)
  .then((res)=>{
    console.log(res.data.message);
    if(confirm('Order Taken Successfully!!')){
    window.location.reload();  
}
  })
  .catch((err)=>{
    console.log(err);
  })
  console.log(orderid);
}

function OrderNotTaken(orderid){
  // import axios from 'axios';
  axios.get('http://localhost:3005/OrderNotTaken/'+orderid)
  .then((res)=>{
    console.log(res.data.message);
    if(confirm('Order Not Taken!!')){
    window.location.reload();  
}
  })
  .catch((err)=>{
    console.log(err);
  })
  console.log(orderid);
}


function declineOrder(orderid){
  // import axios from 'axios';
  axios.get('http://localhost:3005/DeclineOrder/'+orderid)
  .then((res)=>{
    console.log(res.data.message);
    if(confirm('Order Declined Successfully!')){
    window.location.reload();  
}
  })
  .catch((err)=>{
    console.log(err);
  })
  console.log(orderid);
}

function openPage(pageName,elmnt,color) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablink");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].style.backgroundColor = "";
  }
  document.getElementById(pageName).style.display = "block";
  elmnt.style.backgroundColor = color;
}

// Get the element with id="defaultOpen" and click on it
document.getElementById("defaultOpen").click();
</script>
   
</body>
</html> 
